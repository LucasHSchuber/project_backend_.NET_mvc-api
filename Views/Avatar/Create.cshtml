@model project_webbservice.Models.Avatar

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>

<body>
    <h4>Avatar - create</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 my-5 avatar-create-box">
            <h5>Add new avatar</h5>
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AvatarImageFile" class="control-label"></label>
                    <input asp-for="AvatarImageFile" class="form-control" onchange="previewImage(event)" />
                    <span asp-validation-for="AvatarImageFile" class="text-danger"></span>
                </div>
               
                <div id="imagePreview" class="form-group my-3"></div>
                
                <div class="form-group my-3">
                    <input type="submit" value="Create" class="button standard" />
                    <a class="button standard" asp-action="Index"><i class="fa-solid fa-angle-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>


<script>
    function previewImage(event) {
        const input = event.target;
        console.log(input);
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const preview = document.getElementById('imagePreview');
                preview.style.display = "block";
                preview.innerHTML = `<img src="${e.target.result}" class="avatar-img" />`;
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<style>
    #imagePreview {
        display: none;
        max-width: 10em;
        max-height: 10em;
        padding: 1em;
    }
</style>