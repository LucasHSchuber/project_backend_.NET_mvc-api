@model project_webbservice.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>

    <div>
        <h4>User - details</h4>
        <hr />
        <div class="col-md-4 my-5 user-details-box">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserInfo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserInfo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageName)
                </dd>
            </dl>

            <div class="my-4">
                <a class="button standard" asp-action="Index">Back to List</a>
                <a class="button standard" asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a>
                <a class="button delete" asp-action="Delete" asp-route-id="@Model?.UserId">Delete</a>
            </div>
        </div>

</body>

</html>
