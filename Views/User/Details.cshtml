@model project_webbservice.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>

    <div>
        <h4>User - details</h4>
        <hr />
        <div class="my-5 user-details-box col-md-7 col-sm-10">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Username)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Username)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserInfo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserInfo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Created)
                </dt>
                <dd class="col-sm-10">
                    @(Model.Created.Date.ToString("yyyy-MM-dd"))
                </dd>
            </dl>

            <div class="my-4">
                <a class="button standard" asp-action="Index"><i class="fa-solid fa-angle-left"></i> Back to List</a>
                <a class="button standard" asp-action="Edit" asp-route-id="@Model?.UserId"><i
                        class="fa-solid fa-pencil"></i> Edit </a>
                <a class="button delete" asp-action="Delete" asp-route-id="@Model?.UserId">Delete</a>
            </div>
        </div>

</body>

</html>
