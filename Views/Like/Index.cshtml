@model IEnumerable<project_webbservice.Models.Like>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>

    <div class="page-title">
        <h4>Meditation in favorites</h4>
    </div>
    <table class="table mb-5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LikeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Audio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Audio.Title)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LikeID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.LikeID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.LikeID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <div class="page-title">
        <h4>Top three added meditations</h4>
    </div>
    <table class="table mb-5">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Count
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{

                var audioFavoriteCount = Model.GroupBy(u => u.Audio.Title)
                .Select(g => new { Title = g.Key, Count = g.Count(), Id = g.First().Audio.AudioID });

                var audioFavoriteCount5 = audioFavoriteCount.OrderByDescending(x => x.Count).Take(5);

            }
            @foreach (var audioCount in audioFavoriteCount5)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Audio" asp-route-id="@audioCount.Id">@audioCount.Title </a>
                    </td>
                    <td>
                        @audioCount.Count
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
