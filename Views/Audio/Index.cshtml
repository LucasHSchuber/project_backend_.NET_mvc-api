@model IEnumerable<project_webbservice.Models.Audio>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>







<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <div class="page-title">
        <h1>Meditations</h1>
    </div>
    <div class="mt-4 mb-5">
        <a asp-action="Create" class="button standard">Create New <i class="fa-plus fa-solid fa-1x"></i></a>
    </div>

    <div>
        <h5>Search meditation by title</h5>
    </div>
    <form class="mb-4" asp-action="Index" asp-controller="Audio" method="get">
        @* <input type="hidden" id="displayMode" name="displayMode" value="@(ViewBag.displayMode)" /> *@
        <input class="user-searchinput" name="searchstring" placeholder="search" type="search" aria-label="search" />
        <button type="submit" class="button standard"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
        @if (!string.IsNullOrEmpty(ViewBag.search))
        {
            <text>
                <div class="mt-2 ">
                    Search for "<em>@ViewBag.search</em>" <a asp-action="Index" asp-controller="Audio">Remove search</a>
                </div>
            </text>
        }
        else
        {
            <text></text>
        }
    </form>

    <div class="my-5">
        <button class="button" onclick="toggleView(), toggleIcon()">Toggle view <i id="icon" class="fa-solid fa-table"></i></button>
    </div>


    @* audio table *@
    <table class="table" id="audio-table" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AudioID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created)
                </th>
                <th>
                    Uploader
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="audio-table-row" onclick="redirectToDetails(@item.AudioID)">
                    <td>
                        @Html.DisplayFor(modelItem => item.AudioID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @(item.Description.Length > 15 ? item.Description.Substring(0,15) + "..." : item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @(item.Created.Date.ToString("yyyy-MM-dd"))
                    </td>
                    <td>
                       @(item.UploaderUser.Length > 15 ? item.UploaderUser.Substring(0,15) + "..." : item.UploaderUser)
                    </td>
                </tr>
            }
        </tbody>
    </table>


    @* audio cards *@
    <div id="audio-cards">
      <div class="row d-flex justify-content-center my-5">

        @foreach (var item in Model)
        {
                <div class="audio-box mt-2 mb-1 mx-1 col-lg-3 col-md-3 "
                    style="background-image: url('imgupload/@item.ImageName');" onclick="redirectToDetails(@item.AudioID)">
                    <audio class="audio mt-3 mb-1" controls
                        src="audioupload/@Html.DisplayFor(modelItem => item.FilePath)"></audio>
                    <div class="audio-box-content">
                        <h1 class="title">@item.Title</h1>
                        <a class="category link" asp-action="Details" asp-controller="Category"
                            asp-route-id="@item.Category.CategoryId"><em>@item.Category.Name</em></a>
                        @if (item.Description != null)
                        {
                            <p class="description my-3">@(item.Description.Length > 75 ? item.Description.Substring(0, 75) +
                        "..." : item.Description)</p>
                        }
                    </div>
                    @* <div class="d-flex flex-column align-items-center">
                        <a asp-action="Edit" asp-route-id="@item.AudioID" class="button standard full-size">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AudioID" class="button standard full-size">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AudioID" class="button standard full-size">Delete</a>
                    </div> *@
                </div>
        }
      </div>   
    </div>



<script>

    function toggleView() {
        const audioTable = document.getElementById("audio-table");
        const audioCards = document.getElementById("audio-cards");

        console.log("toggle");

        if (audioCards.style.display === "none") {
            audioCards.style.display = "block";
            audioTable.style.display = "none";
        } else {
            audioTable.style.display = "block";
            audioCards.style.display = "none";
        }
    }

    function toggleIcon(){
        const iconEl = document.getElementById("icon");
        if (iconEl.classList.contains("fa-table")){
            iconEl.classList.remove("fa-table");
            iconEl.classList.add("fa-image");
        }else{
             iconEl.classList.remove("fa-image");
            iconEl.classList.add("fa-table");
        }
    }


    function redirectToDetails(audioId) {
        window.location.href = '@Url.Action("Details", "Audio")/' + audioId;
    }
</script>



<style>
    .user-searchinput {
        width: 30%;
        border-radius: 3px;
        height: 2.5em;
        padding: 0.5em;
    }  
</style>

</body>

</html>




